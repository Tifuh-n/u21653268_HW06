@model Homework6_u21653268.Models.StoreProductVM
<link rel="stylesheet" href="~/Content/bootstrap.min.css" />
<script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>

<div class="modal-header">
    <h2 class="modal-title">Details</h2>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<div class="modal-body">
    <div class="card">
        <div class="card-header">
            @Model.productObj.product_name
        </div>
        <div class="card-body">
            <dl>
                
                <dt class="font-weight-bold">Name</dt>
                <dd>@Html.DisplayFor(model => model.productObj.product_name)</dd>
                
                <dt class="font-weight-bold">Year</dt>
                <dd>@Html.DisplayFor(model => model.productObj.model_year)</dd>
                
                <dt class="font-weight-bold">Price</dt>
                <dd>@Html.DisplayFor(model => model.productObj.list_price)</dd>
                
                <dt class="font-weight-bold">Brand</dt>
                <dd>@Html.DisplayFor(model => model.productObj.brand.brand_name)</dd>
                
                <dt class="font-weight-bold">Category</dt>
                <dd>@Html.DisplayFor(model => model.productObj.category.category_name)</dd>
                
            </dl>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <td class="font-weight-bold">Store</td>
                    <td class="font-weight-bold">Quantity</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var store in Model.StoreProducts)
                {
                <tr>
                    <td>@store.store_name</td>
                    @if (store.quantity == 0)
                    {
                        <td class="text-danger">Out of Stock</td>
                    }
                    else
                    {
                        <td>@store.quantity</td>
                    }

                </tr>
                }
            </tbody>

        </table>
    </div>
</div>
